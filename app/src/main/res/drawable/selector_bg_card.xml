<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="150"
          android:exitFadeDuration="150">
    <item android:drawable="@drawable/card_highlighted"
          android:state_pressed="true"/> <!-- pressed -->
    <item android:drawable="@drawable/card_highlighted"
          android:state_focused="true"/> <!-- focused -->
    <item android:drawable="@drawable/card_highlighted"
          android:state_hovered="true"/> <!-- hovered -->
    <item android:drawable="@drawable/card_default"/> <!-- default -->
</selector>